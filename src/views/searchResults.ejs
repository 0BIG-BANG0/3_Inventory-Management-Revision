<%if(products.length==0){%>
    <div class="container my-2 text-danger">
      <h1>Oops! No products matching your search were found</h1>
    </div>
    <%} else { %>
    <div class="container p-5 gap-2 d-flex flex-wrap">
      <% products.forEach((product)=>{ %>
      <div class="card" >
        <img src="<%=product.imageUrl%>" class="card-img-top" style="width: 15rem; height:20rem"alt="..." />
        <div class="card-body small ">
          <p class="card-text">Name: <%=product.name%></p>
          <p class="card-text">Description: <%=product.desc%></p>
          <p class="card-text">Price: <%=product.price%></p>
        </div>
      </div>
      <%})%>
    </div>
    <%}%>